@model List<EntityLayer.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml"; //sonradan eklendi

}

<a class="btn btn-primary" href="/AdminCategory/Create">Kategori Ekle</a>
<br />
<br />

<table id="table" class="table table-bordered" >
    <tr>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @*<td>@Html.ActionLink("Sil", "Delete", new { item.Id }, new { @class = "btn btn-danger", onclick = "return confirm ('silmek istiyor musunuz?')" })*@
            <td><a class="btn btn-danger btnSil" data-id="@item.Id">Sil</a></td>
            <td><a class="btn btn-primary" href="/AdminCategory/Update/@item.Id">Güncelle</a></td>
        </tr>
    }
</table>

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.2/bootbox.min.js"></script>

<script type="text/javascript">
    $(function () {
        $("#table").on("click", ".btnSil", function () {
            var btn = $(this);
            bootbox.confirm("Silmek istediğinize emin misiniz?", function (result) {
                if (result) {
                    var id = btn.data("id");

                    $.ajax({
                        type: "GET",
                        url: "/AdminCategory/Delete/" + id,
                        success: function () {
                            btn.parent().parent().remove();
                        },
                        error: function () {
                            bootbox.alert("Silme işlemi sırasında hata oluştu.");
                        }
                    });
                } else {
                    bootbox.alert("İşlem iptal edildi.");
                }
            });
        });
    });
</script>
