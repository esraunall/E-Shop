@{
    Layout = null;
}

<link href="~/eshop/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    @if (!string.IsNullOrEmpty(ViewBag.uyari))
    {
        <div class="alert alert-success">@ViewBag.uyari</div>
    }
    @using (Html.BeginForm("PasswordReset", "User", FormMethod.Post))
    {
        <div class="form-group">
            <input type="email" name="eposta" placeholder="E-mail adresinizi giriniz" class="form-control" required />
        </div>
        <div class="form-group">
            <input type="submit" value="Şifreyi sıfırla" class="btn btn-success" />
        </div>
    }
</div>
